    ViewData["Title"] = "Home Page";
}
<div class="text-center">
    <h1 class="display-4">ASP.NET Core Live Reload Sample</h1>

    <h5 style="color: steelblue">@ViewBag.Message</h5>

    <h2>Time is: @DateTime.Now.ToString("HH:mm:ss")</h2>
</div>


